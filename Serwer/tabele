CREATE TABLE IF NOT EXISTS users (
   id serial PRIMARY KEY,
   username VARCHAR UNIQUE NOT NULL,
   passwd VARCHAR NOT NULL,
   cash INT
);

CREATE TABLE IF NOT EXISTS events (
   id serial PRIMARY KEY,
   kind  VARCHAR NOT NULL,
   team1 VARCHAR NOT NULL,
   team2 VARCHAR NOT NULL,
   betTeam1 INT,
   betTeam2 INT,
   winner VARCHAR,
   betStatus VARCHAR NOT NULL
);

CREATE TABLE IF NOT EXISTS activeBet (
   id serial PRIMARY KEY,
   user VARCHAR NOT NULL,
   eventKind VARCHAR NOT NULL
   eventId INT NOT NULL,
   betTeam VARCHAR NOT NULL,
   betAmount INT NOT NULL
);

CREATE TABLE IF NOT EXISTS betHistory (
   id serial PRIMARY KEY,
   user VARCHAR NOT NULL,
   eventKind VARCHAR NOT NULL
   eventId INT NOT NULL,
   betTeam VARCHAR NOT NULL,
   betAmount INT NOT NULL,
   moneyEarned INT NOT NULL
);


